package com.java.prgs;
import java.util.Scanner;

public class Array1 {

	public static void main(String[] args) {
Scanner scanner=new Scanner(System.in);
		
		System.out.println("Enter the number of elements in the array");
		int n = scanner.nextInt();
        int x[]=new int[n];
        
        System.out.println("Enter the elements of the array:");
        	for(int i=0;i<n;i++) {
        		x[i]=scanner.nextInt();
        	}
       
        	
        	for(int i=0;i<n;i++) {
        		if(x[i]>x[i+1]) {
        			int temp=x[i];
        			x[i]=x[i+1];
        			x[i+1]=temp;
        		}
        	}
        	System.out.println("The sorted elements of the array:"+ x[i]);
        	
        	int smallest = x[0];
        	int largest=x[n-1];
        	
        	System.out.println("The smallest element of array:"+smallest);
        	System.out.println("The largest element of array:"+largest);
	}


	}

}
